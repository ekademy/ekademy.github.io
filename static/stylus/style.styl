$iMac_width = 1400px
$macPro_width = 900px
$iPad_height = 640px
$iPhone_width = 320px


*, *:before, *:after
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box
body
  background: #f4f4f0
  font: 100%/1.618 'Lato', sans-serif
  font-weight: 400
  color: #666
  text-rendering: optimizeLegibility

#icons
  display: table
  user-select: none
  width: 80%;
  border-radius: 50px
  padding: 0 20px
  margin: 0 auto
  background-color: hsla(0, 0%, 0%, 0.02)
  box-shadow: inset 0 1px 4px hsla(0, 0%, 0%, 0.1), 0 1px 2px hsla(0, 0%, 100%, 0.3)
  .icon
    display: table-cell
    position: relative
    width: 100px
    height: 100px
    cursor: pointer
    filter: drop-shadow(0 1px 1px hsla(0, 0%, 100%, 0.5)) drop-shadow(0 -6px 6px hsla(0, 0%, 100%, 0.5)) drop-shadow(0 10px 10px hsla(0, 0%, 0%, 0.3))
    mask-repeat: no-repeat
    img
      margin: 0px auto;
      display: block;
      height: 90%;
  p
    line-height: 0px
    margin: 0px
    text-align: center
    padding: 0px
    font-size:10px
    width: 100%
  icon:active
    transform: translateY(2px)
    filter: drop-shadow(0 1px 1px hsla(0, 0%, 100%, 0.5)) drop-shadow(0 -3px 6px hsla(0, 0%, 100%, 0.5)) drop-shadow(0 5px 10px hsla(0, 0%, 0%, 0.3))
#device,
#device:before,
#device:after
  background: rgba(0, 0, 0, 0)
  -webkit-transition: all 1s ease-in-out
  -moz-transition: wall 1s ease-in-out
  -o-transition: all 1s ease-in-out
  transition: all 1s ease-in-out
#device:before,
#device:after,
#device span:before,
#device span:after
  content: ''
  display: block
  position: absolute
  right: 50%
#device
  position: relative
  margin: 10px auto 0
  background: #525255
#device:before
  background: #fff
  z-index: 2
#device:after
  background: #d2d5d9
#device span:after
  background: #b2b5b9
  z-index: 1
#device span,
#device span:after,
#device span:before
  -webkit-transition: all 1s ease-in-out
  -moz-transition: wall 1s ease-in-out
  -o-transition: all 1s ease-in-out
  transition: all 1s ease-in-out
#device span
  display: block
  position: absolute
  top: 10px
  left: 50%
  background: #818188
  margin: 4px 0 0 -3px
  width: 10px
  height: 10px
  -webkit-border-radius: 10px
  -moz-border-radius: 10px
  border-radius: 10px
#device #container
  display: block
  width: 60%
  z-index: 3
  height: 74%
  margin-top: 80px
  position: absolute
  left: 20%
  overflow: auto
#device span:before
  content: ''
  text-align: center
  background: #eee
  border-top: 8px solid #ddd
  -webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3)
  -moz-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3)
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3)
  z-index: 2
/* MBPro */
/* MBPro */
#device
  width: $macPro_width
  height: ($macPro_width / 1.75)
  -webkit-border-radius: 10px 10px 0 0
  -moz-border-radius: 10px 10px 0 0
  border-radius: 10px 10px 0 0
  #container
    width: 60%
    height: 62%
    margin-top: 86px
    left: 20%
    .logo
      display: block
      width:20%
      margin:0px auto
    .title
      display: block
      width:100%
      text-align: center
    img
      max-width: 100%
#device:before
  top: ($macPro_width / 18.6)
  margin: 0px
  margin-right: -($macPro_width / 2.24)
  height: ($macPro_width / 2.15)
  width: ($macPro_width / 1.12)
#device:after
  bottom: -($macPro_width / 18)
  margin: 0px
  margin-right: -($macPro_width / 1.55556)
  height: ($macPro_width / 18)
  width: ($macPro_width / 0.77778)
  -webkit-border-radius: 0 0 10px 10px
  -moz-border-radius: 0 0 10px 10px
  border-radius: 0 0 10px 10px
#device span:after
  top: ($macPro_width / 1.75 - 4px)
  margin: 0px
  margin-right: -($macPro_width / 7)
  height: ($macPro_width / 28)
  width: ($macPro_width / 3.5)
  -webkit-border-radius: 0 0 5px 5px
  -moz-border-radius: 0 0 5px 5px
  border-radius: 0 0 5px 5px
#device span:before
  height: ($macPro_width / 2.5454)
  top: ($macPro_width / 14)
  width: ($macPro_width / 1.55556)
  margin: 0px
  margin-right: -($macPro_width / 3.1111)
  padding: $macPro_width / 8 0 0 0
/* -- Wide Screen -- */
@media only screen and (min-width: 1400px)
  /* Thunderbolt */
  #device
    width: $iMac_width
    height: ($iMac_width / 1.81818)
    -webkit-border-radius: 15px
    -moz-border-radius: 15px
    border-radius: 15px
  #device:before
    top: ($iMac_width / 24)
    margin-right: -($iMac_width / 2.18579)
    height: ($iMac_width / 2.15054)
    width: ($iMac_width / 1.0929)
  #device:after
    bottom: -30px
    margin: 0 -40px 0 0
    height: ($iMac_width / 26.66667)
    width: ($iMac_width / 5)
    background: transparent
    border-bottom: 30px solid #d2d5d9
    border-left: 5px solid transparent
    border-right: 5px solid transparent
    -webkit-border-radius: 0px
    -moz-border-radius: 0px
    border-radius: 0px
  #device span
    top: 2px
  #device span:after
    top: ($iMac_width / 1.765)
    margin: 0px
    margin-right: -($iMac_width / 18)
    height: ($iMac_width / 66.66)
    width: ($iMac_width / 4)
  #device span:before
    height: ($iMac_width / 2.42424)
    top: ($iMac_width / 20)
    width: ($iMac_width / 1.33333)
    margin-right: -($iMac_width / 2.66667)
    padding: $iMac_width / 6.5 0 0 0
/* -- End Wide -- */
/* -- iPad Screen Vertical -- */
@media only screen and (min-width: 480px) and (max-width: 768px)
  /* iPad */
  #device
    margin: 75px auto 0
    width: ($iPad_height / 1.2)
    height: $iPad_height
    -webkit-border-radius: 15px
    -moz-border-radius: 15px
    border-radius: 15px
    background: #fff
    #container
      width: 81%
      height: 74%
      margin-top: 42px
      left: 10%
      img
        max-width: 100%
  #device:before
    top: 35px
    margin: 0px
    margin-right: -($iPad_height / 2.8)
    height: ($iPad_height / 1.23)
    width: ($iPad_height / 1.42)
  #device:after
    bottom: 5px
    margin: 0 -10px 0 0
    height: ($iPad_height / 12)
    width: ($iPad_height / 12)
    -webkit-border-radius: ($iPad_height / 12)
    -moz-border-radius: ($iPad_height / 12)
    border-radius: ($iPad_height / 12)
    background: #d2d5d9
  #device span
    background: #d2d5d9
  #device span:after
    margin: 0
    height: 0
    border-width: 0 0 0 0
    width: 0
  #device span:before
    height: ($iPad_height / 1.2)
    top: 20px
    width: ($iPad_height / 1.4)
    margin: 0px
    margin-right: -($iPad_height / 2.8)
    padding-top: ($iPad_height / 3.2)
    -webkit-box-shadow: 0px 0px 0px
    -moz-box-shadow: 0px 0px 0px
    box-shadow: 0px 0px 0px


@media only screen and (max-width: 479px)
  /* iPhone */


  #icons
    display:block;
    .icon
      display:block;
      margin:0px auto;
  #device
    margin: 70px auto 0
    width: $iPhone_width
    height: ($iPhone_width / 0.6)
    -webkit-border-radius: 15px
    -moz-border-radius: 15px
    border-radius: 15px
    #container
      width: 81%
      height: 74%
      margin-top: 42px
      left: 10%
      img
        max-width: 100%;


  #device:before
    top: 30px
    margin: 0 -55px 0 0
    margin-right: -($iPhone_width / 2.36)
    height: ($iPhone_width / 0.72)
    width: ($iPhone_width / 1.1818)
  #device:after
    bottom: 10px
    margin-right: -($iPhone_width / 16)
    height: ($iPhone_width / 8)
    width: ($iPhone_width / 8)
    -webkit-border-radius: ($iPhone_width / 8)
    -moz-border-radius: ($iPhone_width / 8)
    border-radius: ($iPhone_width / 8)
    background: #818188
  #device span
    top: 4px
  #device span:after
    top: 12px
    margin: 0 -20px 0 0
    height: 3px
    width: 40px
    -webkit-border-radius: 10px
    -moz-border-radius: 10px
    border-radius: 10px
    background: #818188
  #device span:before
    height: ($iPhone_width / 0.72)
    top: 22px
    width: ($iPhone_width / 1.18182)
    margin-right: -($iPhone_width / 2.4)
    padding: 50px 0 0 0
    -webkit-box-shadow: 0px 0px 0px
    -moz-box-shadow: 0px 0px 0px
    box-shadow: 0px 0px 0px
